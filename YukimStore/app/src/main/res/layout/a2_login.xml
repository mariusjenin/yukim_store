<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/a2_login_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/a2_login_tv_title_text"
            android:textSize="24sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="190dp" />

        <EditText
            android:id="@+id/a2_login_et_mail"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:autofillHints=""
            android:ems="12"
            android:hint="@string/a2_login_et_mail_hint"
            android:inputType="textEmailAddress" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <EditText
            android:id="@+id/a2_login_et_password"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/a2_login_et_password_hint"
            android:inputType="textPassword"
            tools:ignore="TextContrastCheck" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="190dp" />

        <Button
            android:id="@+id/a2_login_b_validate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/a2_login_b_validate_text" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>